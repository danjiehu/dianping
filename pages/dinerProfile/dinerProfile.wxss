/* pages/dinerProfile/dinerProfile.wxss */

.container_diner {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 50rpx 30rpx;
  box-sizing: border-box;
  margin: 0px 0px 30px 0px;
}

.res_name {
  font-weight: 300;
  font-size: x-large;
  font-style: italic;
  box-shadow: inset 0em -1em gold;
}

.res_description {
  font-size: large;
  font-weight: 300;
  color: #1f1f1f;
  text-shadow: 1px 1px #38fff5;
  margin-top: 8rpx;
  font-style:italic;
}

.dinerImage {
  margin-top: 8rpx;
  display: block;
  width: 100%;
  border-radius: 5px;
}

map {
  display: block;
  width: 100%;
  height: 30vh;
  border-radius: 5px;
}

.section_container{
  margin-top: 60rpx;
  font-size: medium;
  font-weight: 300;
  /* padding: 20rpx; */
}

.section_container_meal {
  display: flex;
  margin-top: 60rpx;
  font-size: medium;
  font-weight: 300;
  justify-content: space-between;
  align-items: end;
}

.section_container_meal image {
  width: 80px;
  height: 80px;
  height: 80px;
  border-radius: 5px;
}

.meal_card {
  display: flex;
}

.meal_name_price {
  margin-left: 30rpx;
  font-size: large;
}

.add_meal {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: grey;
  height: 50rpx;
  width: 50rpx;
  padding:auto 0;
  border-radius: 50%;
}

.add_meal image {
  height: 30rpx;
  width: 30rpx;
  display: block;
  /* margin: 0 auto;
  padding: 2px 0px; */
}

.h2 {
  font-weight: 300;
  font-size: large;
  font-style: italic;
  box-shadow: inset 2em 0.5em gold;
  width: 60px;
  margin-bottom: 24rpx;
}

.input {
  border: 1rpx solid #a6a6a6;
  margin: 10px 0px;
  padding: 15rpx;
  border-radius: 5px;
}

.checkout_float{
  position: sticky; 
  bottom: 0;
  color: white;
  position: sticky;
  bottom: 50px;
  background-color: grey;
  padding: 20px;
  width: auto;
  border-radius: 50px;
  font-size: large;
  font-weight: 300;
  display: flex;
  justify-content: space-between;
  box-shadow: 5px 5px 0px 0px rgba(0, 0, 255, .2);
}

